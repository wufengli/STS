.container {
  display: flex;
  flex-direction: column;
}

.order {
  font-size: 12px;
  padding: 10px 5px;
  background-color: #f5f5f5;
}

.iconfont {
  font-size: 14px;
  color: #ccc;
}

.orderForm {
  display: block;
  width: 100%;
  height: 100%;
}

.orderForm .address {
  display: flex;
  align-items: center;
  line-height: 100%;
  justify-content: space-between;
  padding: 5px;
  margin-bottom: 5px;
  background: #fff;
}

.address .text {
  flex: 1;
}

.text .name {
  margin-right: 5px;
}

.text .Area {
  margin-top: 5px;
}

.address .label {
  width: 40px;
  height: 40px;
  line-height: 40px;
  background: #565656;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 14px;
  margin-right: 5px;
  font-weight: 500;
}

.address .getlabel {
  background: #ffd92a;
}

.bigBox {
  margin-top: 10px;
  background: #fff;
  padding: 5px;
  flex: 1;
}

.bigBox .col-tab {
  padding: 5px 0px;
  display: flex;
  height: 25px;
  line-height: 25px;
  justify-content: space-between;
  text-align: right;
  /* border-bottom: 1px solid #e8e8e8; */
}

.col-tab input {
  flex: 1;
}

.picker {
  line-height: 25px;
}

.bigBox textarea {
  height: 60px;
}

.bigBox .submit {
  background-color: #2c82fd;
  color: #fff;
}

.bigBox:last-child {
  margin-top: 20px;
}
